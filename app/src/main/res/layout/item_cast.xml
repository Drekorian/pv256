<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom">

    <ImageView
        android:id="@+id/ivwCast"
        android:layout_width="@dimen/film_detail_cast_dimension"
        android:layout_height="@dimen/film_detail_cast_dimension"
        android:layout_marginEnd="@dimen/table_cast_margin_right"
        android:layout_marginRight="@dimen/table_cast_margin_right"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cast"/>

    <TextView
        android:id="@+id/tvwCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

</TableRow>
