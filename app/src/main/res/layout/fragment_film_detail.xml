<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lltBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/film_detail_banner_height"
                        android:background="@android:color/black"
                        android:orientation="vertical"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/film_detail_banner_height"
                        android:background="?attr/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvwDirector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="@dimen/film_detail_margin"
                            android:layout_marginLeft="@dimen/film_detail_heading_margin"
                            android:layout_marginStart="@dimen/film_detail_heading_margin"
                            android:text="@string/director"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"/>

                        <TextView
                            android:id="@+id/tvwTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/tvwDirector"
                            android:layout_alignLeft="@id/tvwDirector"
                            android:layout_alignStart="@id/tvwDirector"
                            android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"/>

                        <TextView
                            android:id="@+id/tvwYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tvwTitle"
                            android:layout_marginLeft="@dimen/film_detail_margin"
                            android:layout_marginStart="@dimen/film_detail_margin"
                            android:layout_toEndOf="@id/tvwTitle"
                            android:layout_toRightOf="@id/tvwTitle"
                            android:text="@string/year"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivwPoster"
                        android:layout_width="@dimen/film_detail_poster_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/film_detail_margin"
                        android:layout_marginLeft="@dimen/film_detail_margin"
                        android:layout_marginStart="@dimen/film_detail_margin"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/poster"/>

                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom"
                    android:layout_marginTop="@dimen/film_detail_heading_margin_bottom"
                    android:text="@string/cast"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/table_cast_margin_right"
                            android:layout_marginRight="@dimen/table_cast_margin_right"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gyllenhaal"
                            android:maxHeight="@dimen/film_detail_cast_dimension"
                            android:maxWidth="@dimen/film_detail_cast_dimension"
                            android:src="@drawable/gyllenhaal"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/gyllenhaal"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/table_cast_margin_right"
                            android:layout_marginRight="@dimen/table_cast_margin_right"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/clarke"
                            android:maxHeight="@dimen/film_detail_cast_dimension"
                            android:maxWidth="@dimen/film_detail_cast_dimension"
                            android:src="@drawable/clarke"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/clarke"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </TableRow>
                </TableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom"
                    android:background="@color/divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/film_detail_heading_margin_bottom"
                    android:text="@string/overview"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/tvwDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/film_detail_margin"
        android:clickable="true"
        android:src="@drawable/ic_action_add"
        app:layout_anchor="@id/lltBanner"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
